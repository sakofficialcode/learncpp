{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/std:c++17",
                "/Fe${fileWorkspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\**.cpp"
            ],
            "options": {
                "cwd": "${fileWorkspaceFolder}\\build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}